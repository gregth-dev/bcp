{% extends 'base.html.twig' %}

{% block title %}Se connecter
{% endblock %}

{% block body %}
	<div class="row center">
		<a href="{{path('index')}}">
			<img src="img/logo.png" alt="Logo BCP">
		</a>
	</div>
	<div class="row">
		<div class="col s12 m4 offset-m4">
			<form method="post">
				{% if error %}
					<div class="row center">
						<div class="materialert danger center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					</div>
				{% endif %}

				{% if app.user %}
					<div class="mb-3">
						Vous êtes loggé en tant que
						{{ app.user.username }},
						<a href="{{ path('app_logout') }}">Se déconnecter</a>
					</div>
				{% endif %}
				<div class="input-field">
					<i class="material-icons prefix">email</i>
					<label for="inputEmail">Email</label>
					<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="validate" required autofocus>
				</div>
				<div class="input-field">
					<i class="material-icons prefix">lock_outline</i>
					<label for="inputPassword">Password</label>
					<input type="password" name="password" id="inputPassword" class="validate" required>
					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				</div>
				<div>
					<label>
						<input type="checkbox" name="_remember_me">
						<span>Se souvenir de moi</span>
					</label>
				</div>
				<div class="form-field center">
					<button class="btn" type="submit">
						Connexion
					</button>
				</div>
			</form>
			<div class="row">
				<div class="section center">
					<a href="{{path('app_register')}}">
						Créer un compte
					</a>
					-
					<a href="{{path('app_forgot_password_request')}}">
						Mot de passe oublié
					</a>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
